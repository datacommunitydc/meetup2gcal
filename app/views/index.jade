extends layout

block content
  .container
    include includes/alerts
    include includes/calendar

    .row
      .col-md-12
        .page-header
          .pull-left
            img(src='/images/dc2_logo.png', alt='DC2', class="img-responsive logo")
          .pull-left
            h1= title
            p.lead Welcome to #{title}
          .pull-right
            div(style="margin-top:24px; margin-right:10px")
              +calendar(new Date())
          .clearfix

block append javascript
  script.
    $(function() {
      setTimeout(function() {
        $('.alert').alert('close');
      }, 3000);
    });
